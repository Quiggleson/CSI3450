@page
@model MyemployeesModel
@{
    ViewData["Title"] = "My Employees";
}
<h1>My Employees</h1>

<h2>Employees with a Starred Time Record in the Last Two Weeks</h2>

@if (Model.employees.Count == 0)
{
    <p>No employees have a starred time record in the last two weeks.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th colspan="2">Employee Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.employees)
            {
                <tr>
                    <td>@employee.EFirstName @employee.ELastName</td>
                    <td style="width: 150px"><a href="/@employee.EId">Timecard History</a></td>
                </tr>
            }
        </tbody>
    </table>
}
